.main{
  padding: 50px 15px;
  background: linear-gradient(to right, #45A5FD , #6263FC);
  overflow: hidden;
}
page{
  background: #f5f5f5;

}
.main image{
  width: 80px;
  height: 80px;
  border-radius: 50%;
}
.main text{
  line-height: 80px;
  font-size: 15px;
  color: white;
  margin-left: 15px;
}
.li{
  margin-top: 10px;
  background: white;
  padding: 0 15px;
  overflow: hidden;
  height: 60px;
  line-height: 60px;
  font-size: 14px;
  color: #333333;
}
.li image.fl{
  width: 20px;
  margin-top: 20px;
  margin-right: 15px;
}
.li image.fr{
  width: 8px;
  margin-top: 22px;
}

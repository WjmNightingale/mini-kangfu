page{
  background: #f5f5f5;
}

.list{
  padding: 15px;
  overflow: hidden;
}
.li{
  float: left;
  width: calc((100% - 15px) / 2);
  background: white;
  margin-bottom: 15px;
  height: calc((100vw - 45px) / 2);
  display: flex;
  align-items: center;
}
.li:nth-child(odd){
  margin-right: 15px;
}
.nr{
  text-align: center;
  font-size: 14px;
  color: #333333;
  width: 100%;
}
.nr image{
  width: 40px;
  height: 40px;
  margin-bottom: 7px;
}

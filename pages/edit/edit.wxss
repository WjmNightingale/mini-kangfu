page{
  background: #f5f5f5;
}
.line{
  overflow: hidden;
  padding: 0 15px;
  font-size: 14px;
  color: #333333;
  background: white;
  border-bottom: 1px solid #f5f5f5;
  height: 50px;
  line-height: 50px;
}
.line text{
  width: 90px;
  font-weight: bold;
}
.line input{
  width: calc(100% - 120px);
  font-size: 14px;
  height: 30px;
  line-height: 30px;
  margin-top: 10px;
}
.line image{
  width: 7px;
  height: 12px;
  margin-top: 19px;
}
.big_line{
  padding: 15px;
  background: white;
  border-bottom: 1px solid #f5f5f5;
}
.big_line .tit{
  font-size: 14px;
  color: #333333;
  font-weight: bold;
}
.big_line textarea{
  font-size: 14px;
  margin-top: 10px;
  width: 100%;
  color: #333333;
  line-height: 22px;
  height: 45px;
}
.pic{
  overflow: hidden;
  margin-top: 15px;
}
.pic image{
  width: calc((100% - 30px) / 3);
  height: calc((100vw - 60px) / 3);
  float: left;
  margin-right: 15px;
}

.bottom{
  position: fixed;
  z-index: 99;
  bottom: 15px;
  left: 15px;
  right: 15px;
  height: 55px;
  line-height: 55px;
  border-radius: 5px;
  text-align: center;
  font-size: 14px;
  color: white;
  background: linear-gradient(to top right, #45A5FD , #6263FC);
}
.show{
  margin: 15px 0 10px;
  text-align: center;
}
.next{
  font-size: 14px;
  color: white;
  position: fixed;
  z-index: 9;
  right: 15px;
  bottom: 100px;
  width: 60px;
  height: 60px;
  line-height: 60px;
  text-align: center;
  border-radius: 50%;
  background: linear-gradient(to bottom, #45A5FD , #6263FC) !important;
}
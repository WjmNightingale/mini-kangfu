page{
  background: #f5f5f5;
}
.block{
  padding: 15px;
  background: white;
}
.tit{
  font-size: 14px;
  font-weight: bold;
  color: #333333;
  margin-bottom: 15px;
}
.nr{
  font-size: 13px;
  color: #666666;
  margin-top: 10px;
  line-height: 20px;
}
.date_view{
  overflow: hidden;
  height: 47px;
  margin-top: 15px;
}
.date_li{
  float: right;
  width: calc((100vw - 39px) / 8);
  text-align: center;
  font-size: 13px;
  color: #333333;
  height: 45px;
  line-height: 45px;
  border: 1px solid #1CC4C2;
  border-right: 0;
}
.date_view .sel{
  background: #1CC4C2;
  color: white;
}

.list_head{
  margin-top: 15px;
  font-size: 13px;
  color: #333333;
  text-align: center;
  background: #D5DEE7;
  overflow: auto;
}
.list_head text{
  float: left;
  width: calc((100% - 154px) / 5);
  padding: 15px;
  border-right: 1px solid white;
}
.list_head text:last-child{
  border-right: 0;
}
.li{
  font-size: 13px;
  color: #333333;
  text-align: center;
  background: #f5f5f5;
  overflow: auto;
  border-bottom: 1px solid white;
}
.li text{
  float: left;
  width: calc((100% - 154px) / 5);
  padding: 15px;
  border-right: 1px solid white;
  height: 34px;
  display: flex;
  align-items: center;
}
.li text:last-child{
  border-right: 0;
}
.btn{
  font-size: 14px;
  color: white;
  position: fixed;
  z-index: 9;
  right: 15px;
  bottom: 50px;
  width: 60px;
  height: 60px;
  line-height: 60px;
  text-align: center;
  border-radius: 50%;
  background: linear-gradient(to bottom, #45A5FD , #6263FC) !important;
}
.shadow{
  position: fixed;
  z-index: 999;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.3);
  display: flex;
  align-items: center;
}
.shadow image{
  width: 100%;
}